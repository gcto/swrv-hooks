{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["src/index.ts"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "**/__tests__/*"
  ]
}

